<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.HomepageActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:id="@+id/yundong"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/butai"></ImageButton>

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yundong"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="7dp"
                android:text="3个动作"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>

            <ImageButton
                android:id="@+id/renzhi"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_below="@+id/yundong"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/renzhi"></ImageButton>

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/renzhi"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="7dp"
                android:text="2个视频"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>

            <ImageButton
                android:id="@+id/yuyin"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_below="@+id/renzhi"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/yuyin"></ImageButton>

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yuyin"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="7dp"
                android:text="2个语音任务"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>
            <TextView
                android:layout_marginTop="70px"
                android:layout_marginLeft="50dp"
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能维度"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/txtx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="133dp"
                android:layout_toRightOf="@+id/txt"
                android:layout_alignTop="@+id/txt"
                android:text="数据采集"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>


            <Button
                android:id="@+id/btn11"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_below="@+id/txtx"
                android:layout_alignTop="@+id/yundong"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/yundong"
                android:background="@drawable/btn_bg_selector"
                android:text="正常行走"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn12"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btn11"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/yundong"
                android:background="@drawable/btn_bg_selector"
                android:text="从椅子上站起坐下"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn13"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/btn12"
                android:layout_toRightOf="@+id/yundong"
                android:background="@drawable/btn_bg_selector"
                android:text="360度转身"
                android:textSize="18sp"></Button>


            <Button
                android:id="@+id/btn21"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/renzhi"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/renzhi"
                android:background="@drawable/btn_bg_selector"
                android:text="视频 1"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn22"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_below="@+id/btn21"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="22dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/renzhi"
                android:background="@drawable/btn_bg_selector"
                android:text="视频 2"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn31"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/yuyin"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/yuyin"
                android:background="@drawable/btn_bg_selector"
                android:text="任务 1"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn32"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/btn31"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/yuyin"
                android:background="@drawable/btn_bg_selector"
                android:text="任务 2"
                android:textSize="18sp"></Button>

            <ImageButton
                android:id="@+id/test"
                android:layout_width="170dp"
                android:layout_height="120dp"
                android:layout_below="@+id/yuyin"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/test"></ImageButton>

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="7dp"
                android:text="2个健康量表"
                android:textColor="#000000"
                android:textSize="18sp"></TextView>
            <Button
                android:id="@+id/btn41"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_alignTop="@+id/test"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/test"
                android:background="@drawable/btn_bg_selector"
                android:text="老年抑郁量表"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn42"
                style="@style/MyBtnStyle"
                android:layout_width="166dp"
                android:layout_height="35dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/btn41"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/test"
                android:background="@drawable/btn_bg_selector"
                android:text="社区健康情况调查表"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btn5"
                style="@style/MyBtnStyle"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_below="@+id/btn42"
                android:layout_marginLeft="-100dp"
                android:layout_marginTop="90dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@+id/test"
                android:background="@drawable/btn_bg_selector"
                android:text="健康状况查询"
                android:textSize="18sp"></Button>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>